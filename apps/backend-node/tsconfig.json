{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@repo/db": ["../../packages/database/dist"]
    },
    "types": ["node", "express", "multer"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}